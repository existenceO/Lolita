<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".acitvities.RegisterActivity"
    >
    <include layout="@layout/nav_bar"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/marginSize"/>
    <com.example.lolita.views.InputView
        android:id="@+id/input_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/inputViewHeight"
        app:input_icon="@mipmap/me_3"
        android:layout_marginTop="@dimen/marginSize"
        app:input_hint="请输入用户名"
        app:is_password="false"></com.example.lolita.views.InputView>
    <View
        style="@style/line"/>
    <com.example.lolita.views.InputView
        android:id="@+id/input_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/inputViewHeight"
        app:input_icon="@mipmap/phone"
        app:input_hint="请输入手机号"
        app:is_password="false"></com.example.lolita.views.InputView>
    <View
        style="@style/line"/>
    <com.example.lolita.views.InputView
        android:id="@+id/input_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/inputViewHeight"
        app:input_icon="@mipmap/password"
        app:input_hint="请输入密码"
        app:is_password="true"></com.example.lolita.views.InputView>
    <View
        style="@style/line"/>
    <com.example.lolita.views.InputView
        android:id="@+id/input_pwd_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/inputViewHeight"
        app:input_icon="@mipmap/password"
        app:input_hint="请确认密码"
        app:is_password="true"></com.example.lolita.views.InputView>
    <View
        style="@style/line"/>
    <com.example.lolita.views.InputView
        android:id="@+id/input_mail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/inputViewHeight"
        app:input_icon="@mipmap/password"
        app:input_hint="请输入邮箱"
        app:is_password="true"></com.example.lolita.views.InputView>
    <View
        style="@style/line"/>
    <Button
        style="@style/commitBtn"
        android:text="注册"
        android:layout_margin="@dimen/marginSize"
        android:onClick="onRegisterClick"/>


</LinearLayout >